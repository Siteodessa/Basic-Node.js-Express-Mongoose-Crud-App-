<section class="service-area section-gap" id="service">

  <div class="smallimg sma1"> </div>
  <div class="smallimg sma2"> </div>
  <div class="smallimg sma3"> </div>
  <div class="smallimg sma4"> </div>
  <div class="smallimg sma5"> </div>
  <div class="smallimg sma6"> </div>
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="menu-content pb-70 col-lg-8">
        <div class="title text-center">
          <h1 class="mb-10">Квест - комнаты</h1>
          <p>Представляем Вам популярные квест румы в Одессе</p>
        </div>
      </div>
    </div>
    <div class="row">
                <% quests.forEach(function(quest){ %>
                    <div class="col-lg-4">
                      <div class="single-cat-widget">
                        <div class="content relative">
                                      <a href="/quests/<%= quest["page_link"] %>" target="_blank">
                                        <div class="thumb">
                                         <img class="content-image img-fluid d-block mx-auto" src="<%= quest["image"] %>" alt="">
                                        </div>
                                      </a>
                          </div>
                          <div class="loop_text">
                            <a href="/quests/<%= quest["page_link"] %>" target="_blank">
                                      <h4 class="content-title mx-auto text-uppercase"> <%= quest["quest_name"]	%></h4>    </a>
                                      <p><%= quest["quest_legend"] %></p>
                          </div>
                      </div>
                    </div>
                <% }); %>
    </div>
  </div>
</section>
